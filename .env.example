# ============================================
# SaramondƒÅ Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database
DATABASE_FILE_PATH=/app/data/saramonda.db

# Branch
DEFAULT_BRANCH_ID=branch_001
DEFAULT_BRANCH_NAME=Main Branch

# ============================================
# LINE Messaging API
# ============================================
LINE_CHANNEL_ACCESS_TOKEN=your-channel-access-token
LINE_CHANNEL_SECRET=your-channel-secret
LINE_NOTIFICATION_ENABLED=true
LINE_ADMIN_USER_ID=your-line-user-id

# ============================================
# LINE LIFF (Optional - for LINE Login)
# ============================================
LINE_LIFF_ID=your-liff-id
LINE_OA_ID=@your-line-oa-id

# ============================================
# Google Sheets Integration
# ============================================
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_WEBHOOK_URL=your-google-apps-script-url
GOOGLE_SHEETS_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Backup (Optional)
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
